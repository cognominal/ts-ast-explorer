{
  "name": "ts-ast-explorer",
  "displayName": "Ts AST Explorer",
  "description": "An AST explorer for typescript, javascript, JSON",
  "publisher": "cognominal",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ts-ast-explorer.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Package Explorer",
          "icon": "media/dep.svg"
        }
      ]
    },

    "views": {
      "package-explorer": [
        {
          "id": "ASTTreeview",
          "name": "AST explorer",
          "icon": "media/dep.svg",
          "contextualTitle": "AST treeview"
        }
      ]
    },
    "configuration": {
      "title": "Typescript AST Explorer",
      "properties": {
        "ts-ast-explorer.updateASTOnSaveOnly": {
          "type": "boolean",
          "default": true,
          "description": "Update the AST when a file is saved."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha -r ts-node/register 'src/unit-tests/**/*.test.ts'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.10",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "chai": "^4.3.10",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": "src/unit-tests/**/*.test.ts"
  }
}